{
	"name": "CBP Quickbase Extension",
	"description": "Ease your life while dealing with the hideous QB interface",
	"version": "1.0",
	"manifest_version": 3,
	"background": {
		"service_worker": "background.js"
	},
	"permissions": ["storage", "activeTab", "scripting"],
	"host_permissions": [
		"https://cbms.quickbase.com/*/"	
	],
	"action": {
		"default_popup": "popup.html",
		"default_icon": {
			"16": "CBP-LOGOM.png",
			"32": "CBP-LOGOM.png",
			"48": "CBP-LOGOM.png",
			"128": "CBP-LOGOM.png"
		}
	},
	"icons": {
		"16": "CBP-LOGOM.png",
		"32": "CBP-LOGOM.png",
		"48": "CBP-LOGOM.png",
		"128": "CBP-LOGOM.png"
	}
}